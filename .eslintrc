{
  "extends": [
    "airbnb",
    "plugin:ava/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "ava"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
     "comma-dangle": [0, "always-multiline"],
     "semi": [0],
     "no-use-before-define": [0],
     "no-underscore-dangle": 0,
     "jsx-boolean-value": [0],
     "no-shadow": [0],
     "consistent-return": [0],
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "react/jsx-no-bind": [0],
     "import/no-unresolved": [0] // Until import plugin supports webpack 2 resolveModules
  }
}
